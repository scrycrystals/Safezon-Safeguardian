<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:app2.Views"
             x:Class="app2.Views.VirtualGuardianPage"
             BackgroundImageSource="bgg.png"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto, *, Auto">
        <!-- Header Section -->
        <local:TopBar Grid.Row="0" />

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Header -->
            <StackLayout Grid.Row="0" Orientation="Horizontal" BackgroundColor="Black" Padding="10">
                <Image Source="virtualguard.png" WidthRequest="50" HeightRequest="50"/>
                <StackLayout>
                    <Label Text="Virtual Guardian" FontSize="24" TextColor="White" FontAttributes="Bold"/>
                    <Label Text="Your Safety Companion" FontSize="14" TextColor="White"/>
                </StackLayout>
            </StackLayout>

            <!-- Chat Section -->
            <StackLayout Grid.Row="1" Padding="10" Spacing="10">
                <Label Text="Ask a question or type a message" FontSize="16" TextColor="Black"/>

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Entry x:Name="MessageInput"
                           Placeholder="Type here..."
                           HorizontalOptions="FillAndExpand"
                           FontSize="14"
                           TextColor="Black"/>
                    <ImageButton Source="mic.png"
                                 WidthRequest="30"
                                 HeightRequest="30"
                                 Clicked="OnVoiceInputClicked"/>
                    <Button Text="Send"
                            BackgroundColor="#21F490"
                            TextColor="Black"
                            Clicked="OnSendButtonClicked"/>
                </StackLayout>

                <!-- Chatbot Response Label -->
                <Label x:Name="ChatbotResponseLabel"
                       Text=""
                       FontSize="14"
                       TextColor="Black"
                       LineBreakMode="WordWrap"
                       Margin="0,10,0,0"/>
            </StackLayout>

            <!-- Action Buttons -->
            <StackLayout Grid.Row="2" Padding="10" Spacing="10">
                <Button Text="Notify Emergency Contacts"
                        BackgroundColor="White"
                        TextColor="Black"
                        FontAttributes="Bold"
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnNotifyContactsClicked"/>

                <Button Text="Contact Emergency Services"
                        BackgroundColor="Black"
                        TextColor="White"
                        FontAttributes="Bold"
                        Clicked="OnEmergencyServicesClicked"/>
            </StackLayout>
        </Grid>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="2" BackgroundColor="White" HeightRequest="60">
            <local:BottomBar/>
        </Grid>
    </Grid>
</ContentPage>
