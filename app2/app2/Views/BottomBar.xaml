<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app2.Views.BottomBar">
    <!-- Bottom Navigation Bar -->
    <Grid BackgroundColor="White"
          Grid.Row="2"
          Padding="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Bottom NavBar Buttons -->
        <ImageButton Source="location.png"
                     Grid.Column="0"
                     BackgroundColor="{Binding LocationButtonColor}"
                     HeightRequest="25"
                     WidthRequest="25"
                     x:Name="LocationButton"
                     Opacity="0.5"
                     Clicked="LocationButton_Clicked" />
        <ImageButton Source="healthcare.png"
                     Grid.Column="1"
                     BackgroundColor="{Binding HealthButtonColor}"
                     HeightRequest="25"
                     WidthRequest="25"
                     x:Name="HealthButton"
                     Opacity="0.5"
                     Clicked="OnHealthcareButtonClicked" />
        <ImageButton Source="home.png"
                     Grid.Column="2"
                     BackgroundColor="{Binding HomeButtonColor}"
                     HeightRequest="25"
                     WidthRequest="25"
                     x:Name="HomeButton"
                     Opacity="0.5"
                     Clicked="OnHomeButtonClicked" />
        <ImageButton Source="policeman.png"
                     Grid.Column="3"
                     BackgroundColor="{Binding PoliceButtonColor}"
                     HeightRequest="25"
                     WidthRequest="25"
                     x:Name="GuardButton"
                     Opacity="0.5"
                     Clicked="OnPoliceButtonClicked" />
        <ImageButton Source="telephone.png"
                     Grid.Column="4"
                     BackgroundColor="{Binding CallButtonColor}"
                     HeightRequest="25"
                     WidthRequest="25"
                     x:Name="ContactButton"
                     Opacity="0.5"
                     Clicked="OnTelephoneButtonClicked" />
    </Grid>

</ContentView>
